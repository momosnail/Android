<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:includeFontPadding="false"
    android:background="@drawable/demo_list_line"
    android:visibility="gone"/>
<RelativeLayout
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="2dp"
    android:paddingBottom="12dp"
    android:background="@drawable/demo_list_box_nor">
    <ImageView
        android:id="@+id/iv_demo_item_img"
        android:layout_width="62dp"
        android:layout_height="32dp"
        android:layout_marginLeft="56dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/iv_main_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@id/iv_demo_item_img"
        android:fontFamily="@font/pingfang_regular"
        android:layout_centerVertical="true"
        android:includeFontPadding="false"
        android:letterSpacing="0.1"
        android:text=""
        android:textColor="@color/demo_title"
        android:textSize="16dp" />



</RelativeLayout>
</LinearLayout>